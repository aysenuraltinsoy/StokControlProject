@using StockControlProject.Domain.Entities;

@model List<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Kategori Listesi</strong>
        </div>
        <div class="card-body">
            <table id="bootstrap-data-table" class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Kategori</th>
                        <th>Açıklama</th>
                        <th>Durumu</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        @if (item.IsActive)
                        {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>

                                <td>
                                    <span>Aktif</span>
                                   
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.ID" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>&nbsp; Güncelle</a>
                                    <a asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.ID" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>&nbsp; Sil</a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>

                                <td>
                                    <span>Pasif</span>

                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.ID" class="btn btn-succes btn-sm">&nbsp; Güncelle</a>
                                    <a asp-area="Admin" asp-controller="Category" asp-action="ActivateCategory" asp-route-id="@item.ID" class="btn btn-succes btn-sm"><i class="fa-check-square-o"></i>&nbsp; Aktivate</a>
                                </td>
                            </tr>
                        }

                    }
                  
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Css{
    <link rel="stylesheet" href="assets/css/lib/datatable/dataTables.bootstrap.min.css">
}


@section Scripts{
    <!-- Scripts -->
 

    <script src="~/template/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="~/template/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/template/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/template/assets/js/init/datatables-init.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
        });
    </script>

}